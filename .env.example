# SERVER
APP_STAGE=local
PORT=8080
API_PREFIX=api
CONTEXT=v1
ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
ALLOWED_HEADERS=Content-Type,Authorization,Set-Cookie,Access-Control-Allow-Origin,Cache-Control,Pragma
ALLOWED_METHODS=GET,HEAD,PUT,POST,DELETE,PATCH,OPTIONS
CORS_ENABLED=true
CORS_CREDENTIALS=false

# SWAGGER
SWAGGER_PATH=docs
SWAGGER_ENABLED=true

# DATABASE - PostgreSQL Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=payment_gateway
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false

# TRANSBANK - Payment Provider
TRANSBANK_API_KEY=your_transbank_api_key
TRANSBANK_API_SECRET=your_transbank_api_secret
TRANSBANK_COMMERCE_ID=your_commerce_id
TRANSBANK_API_URL=https://webpay3g.transbank.cl/api

# MERCADO PAGO - Payment Provider
MERCADO_PAGO_API_KEY=your_mercado_pago_api_key
MERCADO_PAGO_API_SECRET=your_mercado_pago_api_secret
MERCADO_PAGO_API_URL=https://api.mercadopago.com
